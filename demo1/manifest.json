{
  "manifest_version": 2,
  "name": "BlogTool",
  "version": "0.0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "demo1" // shown in tooltip
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.jianshu.com/writer*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "https://www.baidu.com/*"
  ]
}